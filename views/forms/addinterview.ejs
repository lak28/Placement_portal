<!-- Ejs file to add interview form  -->
<form action="/interview/create" method="POST">
    <h1 style="color: brown;">Schedule an Interview</h1>
    <input type="text" name="role" placeholder="Role*" required>
    <select name="student" style="width: 400px; color:blue; background-color: yellowgreen;" >
        <%for(let ninja of student){%>
            <option value="<%= ninja.id%>" ><%= ninja.name %></option>
        <%}%>
    </select>
    <select name="company" style="width: 400px; color:blue; background-color: yellowgreen;" >
        <%for(let org of company){%>
            <option value="<%= org.id%>"><%= org.name %></option>
        <%}%>
    </select>
    <input type="datetime-local" name="date" placeholder="Interview on*" required style="width: 400px; color:blue; background-color: yellow;">
    <input type="hidden" name="result" value="Interview Scheduled">
    <button value="scheduleInterview" class="submit">Schedule</button>
    <a href="/">Back</a>
</form>
