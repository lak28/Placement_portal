<!-- Ejs file to add student form  -->
<form action="/student/create" method="POST">
    <h1 style="color: brown;">Add New Student</h1>
    <input type="text" name="name" placeholder="Enter name of the student*" required>
    <input type="text" name="college" placeholder="Enter his/her college name*" required>
    <select name="status" id="" style="width: 400px; color:blue; background-color: yellowgreen;">
        <option value="Placed">Placed</option>
        <option value="Not Placed" selected>Not Placed</option>
        <option value="Status Unknown">Status unknown</option>
    </select>
    <select name="batch"style="width: 400px; color:blue; background-color: yellow;" >
        <%for(let batch of batches){%>
            <option value="<%= batch.id%>"><%= batch.name %></option>
        <%}%>
    </select>
    <input type="email" name="email" placeholder="Email*" required>
    <input type="text" name="dsa" placeholder="DSA Score*" required>
    <input type="text" name="web" placeholder="Web Developement Score*" required>
    <input type="text" name="react" placeholder="React Score*" required>
    <button value="scheduleInterview" class="submit" style="width: 100px;">Add Student</button>
    <a href="/">Back</a>
</form>
