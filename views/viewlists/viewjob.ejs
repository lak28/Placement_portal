<!-- Ejs file to view Job  -->

<h1 style="color: brown;">Jobs Available</h1>
<!-- view list of all jobs along with details and apply link  -->
<div class="flex"  >
    <%for(let job of jobs){%>
        <div class="item">
            <h2><%= job.role %></h1>
            <p><%= job.company %></p>
            <p>Salary- <%= job.ctc %></p>
            <a href="<%= job.link %>"><button value="scheduleInterview" class="submit">Apply</button></a>
            <a id="morejd" style="margin-left: 110px;" href="/job/details/<%= job.id %>">View Details</a>
        </div>
    <%}%>
</div>
